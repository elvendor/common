{
  "name": "payconn/common",
  "description": "Payconn payment processing library for PHP",
  "keywords": [
    "payconn",
    "gateway",
    "payment",
    "purchase",
    "3d",
    "turkey"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Murat SAC",
      "email": "muratsac@mail.com"
    }
  ],
  "type": "library",
  "require": {
    "php": "^8.0|^8.1|^8.2",
    "guzzlehttp/guzzle": "^6.5|^7.0",
    "symfony/http-foundation": "^4.4|^5.0|^6.0|^7.0"
  },
  "autoload": {
    "psr-4": {
      "Payconn\\Common\\": "src/Common"
    },
    "classmap": ["src/Payconn.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "Payconn\\Tests\\Common\\": "tests/Common"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.3",
    "phpstan/phpstan": "^0.11.2",
    "vimeo/psalm": "^3.9"
  }
}
